@viewModel DotvvmAcademy.Course.LogInRegistration.LogInRegistrationViewModel

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <section>
        <h2>Log-In</h2>
        <div>
            <div>
                <dot:Validator Value="{value: LogInForm.Email}" 
                               ShowErrorMessageText="true"/>
            </div>
            <span>Email: </span>
            <dot:TextBox Text="{value: LogInForm.Email}" />
        </div>
        <div>
            <div>
                <dot:Validator Value="{value: LogInForm.Password}"
                               ShowErrorMessageText="true" />
            </div>
            <span>Password: </span>
            <dot:TextBox Text="{value: LogInForm.Password}" />
        </div>
        <div>
            <dot:Validator Value="{value: LogInForm}"
                           ShowErrorMessageText="true"/>
        </div>
        <dot:Button Click="{command: LogIn()}"
                    Text="Log-In" />
    </section>
    <section>
        <h2>Registration</h2>
        <div>
            <span>Email: </span>
            <dot:TextBox Text="{value: RegistrationForm.Email}"/>
        </div>
        <div>
            <span>Password: </span>
            <dot:TextBox Text="{value: RegistrationForm.Password}"/>
        </div>
        <div>
            <span>Name: </span>
            <dot:TextBox Text="{value: RegistrationForm.Name}"/>
        </div>
        <div>
            <span>Age: </span>
            <dot:TextBox Text="{value: RegistrationForm.Age}"/>
        </div>
        <dot:Button Click="{command: Register()}"
                    Text="Register"/>
</body>
</html>